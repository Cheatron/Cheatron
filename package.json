{
  "name": "cheatron",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "packageManager": "bun@1.2.21",
  "main": "dist-electron/startup.mjs",
  "workspaces": [
    "native",
    "cli"
  ],
  "description": "Cheatron â€” a modern, user-friendly desktop frontend inspired by Cheat Engine; includes a performant native bridge and developer tooling.",
  "keywords": [
    "cheat-engine",
    "memory-editor",
    "game-hacking",
    "reverse-engineering",
    "electron",
    "react",
    "typescript",
    "native-bridge",
    "memory-scanner",
    "debugger",
    "disassembler",
    "assembler"
  ],
  "homepage": "https://github.com/Cheatron/Cheatron#readme",
  "bugs": {
    "url": "https://github.com/Cheatron/Cheatron/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cheatron/Cheatron.git"
  },
  "license": "MIT",
  "author": {
    "name": "Serkan Aksoy",
    "email": "serkanaksy@proton.me",
    "url": "https://github.com/woldann"
  },
  "contributors": [],
  "scripts": {
    "dev": "vite",
    "dev:debug": "cross-env ELECTRON_DEBUG=1 vite",
    "debug": "bun run vite build --mode development && electron --inspect=9229 --remote-debugging-port=9222 .",
    "debug:brk": "bun run vite build --mode development && electron --inspect-brk=9229 --remote-debugging-port=9222 .",
    "build:pre": "bun run tsc -b && bun run vite build && bun run native:build:release && bun run native:sign",
    "build": "bun run build:pre && bun run electron-builder --win --x64",
    "build:verbose": "bun run build:pre && cross-env DEBUG=\"electron-builder:*\" bun run electron-builder --win --x64",
    "build:never-publish": "bun run build:pre && bun run electron-builder --win --x64 --publish never",
    "native:build": "bun run native:build:release",
    "native:build:debug": "cross-env TARGET_EXECUTABLE=Cheatron bun run --cwd native configure && bun run --cwd native build:debug",
    "native:build:release": "cross-env TARGET_EXECUTABLE=Cheatron bun run --cwd native configure && bun run --cwd native build:release",
    "native:build:electron": "cross-env TARGET_EXECUTABLE=electron bun run --cwd native configure && bun run --cwd native build:debug",
    "native:build:bun": "cross-env TARGET_EXECUTABLE=bun bun run --cwd native configure && bun run --cwd native build:debug",
    "native:sign": "bun run sign:win native/build/cheatron-native.node",
    "lint": "eslint .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "preview": "vite preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "sign:win": "bun run scripts/sign.ts",
    "start": "electron ."
  },
  "dependencies": {
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "colord": "^2.9.3",
    "electron-store": "^11.0.2",
    "electron-updater": "6.6.2",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.12.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@electron/windows-sign": "1.2.2",
    "@eslint/js": "^9.39.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^27.0.0",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "bun-types": "^1.3.6",
    "cross-env": "^10.1.0",
    "electron": "^39.3.0",
    "electron-builder": "^26.4.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-node": "^5.3.0",
    "vite-plugin-electron": "0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.17"
  }
}
