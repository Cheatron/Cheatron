{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build:dev",
      "type": "shell",
      "command": "bun",
      "args": ["run", "build:dev"],
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "dev",
      "type": "shell",
      "command": "bun",
      "args": ["run", "dev"],
      "isBackground": true,
      "group": "build",
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "^(.*)$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*VITE.*$",
          "endsPattern": "^.*Local:.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
